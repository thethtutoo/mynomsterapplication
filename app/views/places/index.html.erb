<div class="col-xs-10 col-xs-offset-1">

<%= paginate @places %>

</div>

<% @places.each do |place| %>
	<div class="mybox col-xs-10 col-xs-offset-1">
		<h1><%= place.name  %></h1> 

		<i><%= place.address %></i><br><br>

		<p><%= place.description %></p><br>

		<% if place.user.present? %>
      		<small><%= place.user.email %></small>
    	<% end %>

		<hr>
	</div>
<% end %>